div#graphic
	.graphic-wrapper
		each month, index in months_list 
			div.monthWrapper
				.titleWrapper
					.copy
						.month= month
					.clearfix
				.daysWrapper 
					each entry in all_access_filtered_top_wikipedia_pages_with_emoji_2021
						if entry.month -1 == index 
							if entry.day == 1
								- var dow = (new Date(2021, entry.month - 1, entry.day)).getDay()
								- var i = 0
							while i < dow
								.eachDay.blank
								- i++
							.eachDay.real(lang="en")(class!= entry.highlight)
								.dayNumber(class!= entry.highlight)!= entry.day
								.emoji(class!= entry.emoji)!= entry.emoji
								.article(lang="en")
									if entry.article
										- var articleName = entry.hyphenated ? entry.hyphenated.replace(/\^/g, "&shy;") : entry.article.replace(/_/g, " ")
										a(href!="https://en.wikipedia.org/wiki/" + entry.article)!= articleName
			div.annoWrapper
				for item in content.items
					if item.month == month
						div.annotation-wrapper(class=month)
							p.annotation-note-title!= item.title
							p.annotation-note!= item.anno
				















