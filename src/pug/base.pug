doctype html
html
	head
		block head
			meta(charset='utf-8')

			block page-info
				title #{build_info.thing_name}
				meta(name='description', content=build_info.thing_description)
			meta(http-equiv='X-UA-Compatible', content='IE=edge')
			meta(name='viewport', content='width=device-width, initial-scale=1')
			link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=PT+Serif:400,700,400italic,700italic")
			block styles
				link(rel='stylesheet', href='css/main.css?t=' + build_info.timestamp)
			block favicon
				link(rel="icon" href="/favicon.ico")
			block base-target
				base(target="_blank")

	body(class=content.target_site || "")
		block content
			#interactive-wrap
				#interactive-content
					block inner-content
						// main content area

			block scripts			
				script(src='js/config.js?t=' + build_info.timestamp)
