.legend
	max-width 500px
	margin-left auto
	margin-right auto
	text-align center
	display block
	line-height 100%

.key
	display inline-block
	padding-right 20px
	font-size 14px
	font-family $qz-sans
	padding-bottom 0px

	@media screen and (max-width: 460px)
		font-size 11.5px

.monthWrapper
	margin-top 40px
	margin-left auto
	margin-right auto
	left 0px
	right 0px
	max-width $large-width

.titleWrapper
	font-size 22px
	font-family $qz-sans-bold
	color $qz-blue-2
	margin-bottom 10px
	text-align center

.daysWrapper
	display flex
	flex-flow row wrap
	column-gap 5px
	row-gap 5px

	@media only screen and (max-width 500px)
		flex-flow column

.eachDay
	width 13.3%
	background-color $qz-map-land-fill
	padding-bottom 10px

	@media only screen and (max-width 500px)
		width 100%
		padding-bottom 5px
		padding-top 5px

.dayNumber
	font-size 10px
	font-family $qz-sans-bold
	margin-left 5px
	margin-top 5px
	color $qz-blue-2

	@media only screen and (max-width 500px)
		font-size 14px
		display inline-block
		vertical-align middle
		margin-top 0px

.emoji
	font-size 18px
	text-align center

	@media only screen and (max-width 500px)
		font-size 14px
		display inline-block
		text-align left
		vertical-align middle
		margin-top 0px
		float right
		margin-right 5px

.âšª, .ðŸ”´
	visibility hidden

.article
	font-size 12px
	font-family $qz-sans
	text-align center
	line-height 110%
	padding 3px

	@media only screen and (max-width 500px)
		display inline-block
		text-align left
		vertical-align middle
		font-size 14px
		padding 0px
		margin-left 5px

.annoWrapper
	margin-left auto
	margin-right auto
	max-width $medium-width
	display flex
	flex-flow row nowrap
	justify-content center
	column-gap 5px

.annotation-wrapper
	vertical-align top
	width 44%
	background-color $qz-blue-2
	padding 10px
	margin-top 1em
	p
		color white
		a
			color white
			text-decoration underline

.annotation-note
	font-size 14px
	font-family $qz-sans-light
	line-height 125%
	
	@media screen and (max-width: 550px)
		font-size 12px

.annotation-note-title
	padding 0 0 0.3em
	font-size 14px
	color $qz-purp-2
	font-family $qz-sans-bold
	
	@media screen and (max-width: 550px)
		font-size 12px