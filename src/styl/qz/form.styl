body
	font-size 18px
	font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
label
	vertical-align middle
	font-family $qz-sans
	font-size 20px
	height 2em

.question
	margin-bottom 1em
	box-sizing border-box
.question + .question
	padding-top 1em
	
input
	
	font-size 20px
	
	&[type="radio"], &[type="checkbox"]
		vertical-align middle
		
	&[type="text"]
		width 100%

.option
	min-height 2em
		
.linear-scale
	.option
		display inline-block
		height 3em
		min-width 2em
		text-align center
		
		.range-label
			bottom 0
			
		label, input
			display block
			
		input
			margin 0 auto
			
.radio
	input[type="text"]
		display inline-block
		width calc(100% - 5.6em)
		
.radio, .checkbox
	input[type="radio"]
		margin-right 0.25em
		margin-top -0.35em
		margin-left 1px

label
	input
		font-size 0.75em
	
textarea, input
	font-family $qz-sans
	box-sizing border-box
	
textarea
	width 100%
	min-height 10em
	font-size 1em
	line-height 1.4em
	padding 0.45em 0.5em 0.5em 0.5em
	
textarea, input[type="text"]
	background-color $qz-background-color-2
	border-radius 4px
	border 1px solid $qz-gray-1
	padding 0.5em

.button-wrap
	margin-top 2em
button
	display block
	margin 0 auto
	width 6em
	background-color $qz-blue-2
	border-radius 5px
	font-size 24px
	font-family $qz-sans-bold
	border none
	color #fff
	
.modules
	.form, .submitted, .already-completed
		display none
		opacity 0
		transition opacity 1s
		box-sizing border-box
	&[data-showing="form"]
		.form
			display block
			opacity 1
	&[data-showing="submitted"]
		.submitted
			display block
			opacity 1
	&[data-showing="already-completed"]
		.already-completed
			display block
			opacity 1
			
			
	&[data-showing="submitted"], &[data-showing="already-completed"]
		border 1px solid $qz-gray-1
		border-radius 4px
		padding 1em
		background-color $qz-background-color-2
	